# Production Environment Variables
# Copy this file to .env and customize for your environment

# ================================
# CORE API CONFIGURATION
# ================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false
LOG_LEVEL=INFO
LOG_FILE=logs/chatbot.log

# ================================
# DATABASE CONFIGURATION
# ================================
# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# MongoDB Configuration  
MONGODB_URL=mongodb://root:password@mongodb:27017/dynamic_ai_chatbot?authSource=admin
MONGODB_DB=dynamic_ai_chatbot

# ================================
# DASHBOARD CONFIGURATION
# ================================
CHATBOT_API_URL=http://chatbot:8000
DASHBOARD_PORT=5000
FLASK_DEBUG=false

# ================================
# AI/ML CONFIGURATION
# ================================
# OpenAI Configuration (Optional - for GPT integration)
OPENAI_API_KEY=your_openai_api_key_here

# Hugging Face Configuration (Optional - for advanced models)
HF_TOKEN=your_huggingface_token_here

# ================================
# EXTERNAL INTEGRATIONS
# ================================
# Slack Integration (Optional)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret

# Telegram Integration (Optional)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# ================================
# SESSION CONFIGURATION
# ================================
SESSION_TIMEOUT=3600  # 1 hour in seconds
MAX_CONTEXT_LENGTH=10  # Maximum conversation turns to remember

# ================================
# SECURITY CONFIGURATION
# ================================
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# ================================
# DEVELOPMENT SETTINGS
# ================================
# Set to true for development hot-reload
REACT_APP_HOT_RELOAD=false
CHOKIDAR_USEPOLLING=false